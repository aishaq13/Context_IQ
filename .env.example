# Environment Configuration Template
# Copy this file to .env and fill in with your values

# ============================================================================
# API Configuration
# ============================================================================
DEBUG=false
APP_NAME=Context IQ
API_V1_STR=/api/v1

# ============================================================================
# Database Configuration (PostgreSQL)
# ============================================================================
DATABASE_URL=postgresql://contextiq_user:contextiq_pass@postgres:5432/contextiq

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_URL=redis://redis:6379/0
CACHE_TTL=300

# ============================================================================
# Kafka Configuration
# ============================================================================
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_TOPIC_USER_EVENTS=user_events

# ============================================================================
# AWS Bedrock Configuration (Optional)
# Leave empty to run without LLM-based scoring
# ============================================================================
AWS_REGION=us-east-1
BEDROCK_MODEL_ID=claude-3-sonnet-20240229
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# ============================================================================
# ML Configuration
# ============================================================================
EMBEDDING_DIM=128
MODEL_UPDATE_INTERVAL=3600
MIN_INTERACTION_COUNT=5

# ============================================================================
# Relevance Scoring Weights
# ============================================================================
# ML Score: learned from user-content interactions (default: 60%)
# LLM Score: computed by Claude for contextual reasoning (default: 40%)
ML_SCORE_WEIGHT=0.6
LLM_SCORE_WEIGHT=0.4
